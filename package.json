{
  "name": "azure-functions-monorepo",
  "description": "LeanIX Azure Functions Monorepo",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./examples/*",
    "./projects/*"
  ],
  "engines": {
    "node": ">=18.12.1"
  },
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "clean:all": "npm run clean & rimraf \"**/node_modules\"",
    "clean": "rimraf \"**/dist\" \"**/*.tsbuildinfo\" \"**/*.tgz\" \"**/.temp\" \"**/coverage\"",
    "prepare": "husky install",
    "show-graph": "npx nx graph"
  },
  "author": {
    "name": "Paulo Santos",
    "email": "paulo.santos@leanix.net"
  },
  "license": "ISC",
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@types/figlet": "^1.5.5",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "azure-functions-core-tools": "^4.0.4895",
    "commander": "^9.4.1",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.16",
    "esbuild-node-externals": "^1.5.0",
    "figlet": "^1.5.2",
    "husky": "^8.0.0",
    "lerna": "^6.4.1",
    "ngrok": "^4.3.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "eslint-config-lx": "*"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-lx"
    ]
  }
}
